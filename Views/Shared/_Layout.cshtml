<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>PenKAI @ViewData["Title"]</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Mangaka_portal.styles.css" asp-append-version="true" />
    <link rel="shortcut icon" href="/img/Faviconn.png" type="image/x-icon">
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-body-tertiary">
            <div class="container-fluid">

                <div class="logo-container">
                    <a asp-controller="Home" asp-action="Index">
                        <img src="~/img/Logo.png" alt="Logo do site" />
                    </a>
                </div>

                <form class="d-flex" role="search">
                    <div class="input-wrapper">
                        <input class="form-control me-2" type="search" placeholder="What do you want to search for?"
                            aria-label="Search" />
                        <button class="btn btn-outline-success" type="submit"><img src="/img/lupa.png"></button>
                    </div>
                </form>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" asp-controller="Home"
                                asp-action="Index">Home</a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"
                                aria-expanded="false">
                                Explore
                            </a>
                            <ul class="dropdown-menu">
                                <!-- Gêneros principais -->
                                <li><a class="dropdown-item" href="#">Shōnen</a></li>
                                <li><a class="dropdown-item" href="#">Action</a></li>
                                <li><a class="dropdown-item" href="#">Adventure</a></li>
                                <li><a class="dropdown-item" href="#">Fantasy</a></li>
                                <li><a class="dropdown-item" href="#">Romance</a></li>
                                <li><a class="dropdown-item" href="#">Ficction</a></li>

                                <li>
                                    <hr class="dropdown-divider">
                                </li>

                                <!-- Gêneros secundários -->
                                <li><a class="dropdown-item" href="#">Comedy</a></li>
                                <li><a class="dropdown-item" href="#">Drama</a></li>
                                <li><a class="dropdown-item" href="#">Horror</a></li>
                                <li><a class="dropdown-item" href="#">Mystery</a></li>
                                <li><a class="dropdown-item" href="#">Supernatural</a></li>
                                <li><a class="dropdown-item" href="#">Sports</a></li>
                            </ul>
                        </li>


                        <li class="nav-item">
                            <a class="nav-link" href="#">Create</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"
                                aria-expanded="false">
                                Language
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="#">🇧🇷 Português</a></li>
                                <li><a class="dropdown-item" href="#">🇺🇸 Inglês</a></li>
                                <li>
                                    <hr class="dropdown-divider">
                                </li>
                                <li><a class="dropdown-item" href="#">🇯🇵 Japonês</a></li>
                                <li><a class="dropdown-item" href="#">🇰🇷 Coreana</a></li>

                            </ul>
                        </li>
                    </ul>
                </div>
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"
                            aria-expanded="false">
                            <img src="/img/FotoPerfil.jpg" alt="Foto de Perfil">
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" asp-controller="Usuario" asp-action="Perfil">Perfil</a>
                            </li>
                            <li><a class="dropdown-item" asp-controller="Usuario"
                                    asp-action="Configuracoes">Configurations</a></li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li><a class="dropdown-item" href="#">Leave</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="main-footer">
        <div class="footer-container">
            <div class="footer-logo">
                <h2>PenKAI</h2>
                <p>Connecting Stories & Creativity<br><span class="japanese-text">物語と創造性をつなぐ</span></p>
            </div>

            <div class="footer-links">
                <h3>Links</h3>
                <ul>
                    <li><a href="#">Home</a></li>
                    <li><a href="#">Explore Mangás</a></li>
                    <li><a href="#">Create page</a></li>
                    <li><a asp-controller="Home" asp-action="Privacy">Privacy</a></li>
                </ul>
            </div>

            <div class="footer-contact">
                <h3>Contact</h3>
                <p>Email: suporte@penkaiportal.com</p>
                <p>Instagram: @@penkai.portal</p>
            </div>
        </div>

        <div class="footer-bottom">
            <p>&copy; 2025 - PenKAI. All rights reserved.</p>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
